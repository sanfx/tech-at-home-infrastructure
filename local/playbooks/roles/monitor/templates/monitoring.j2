version: '3.7'

networks:
  {{traefik_network_name}}:
    external: true

services:
  dockerd-exporter:
    image:  stefanprodan/dockerd-exporter:latest
    networks:
      - {{traefik_network_name}}
    environment:
      - DOCKER_GWBRIDGE_IP=172.18.0.1
    restart: unless-stopped
    mem_limit: 512m
    mem_reservation: 128M


